
.slider
	position relative
	animation fadeIn .8s ease backwards
	overflow hidden

	.slider-slides
		position relative
		overflow hidden

	.slide
		position relative
		overflow hidden
		display none
		&.slide-current
			display block
			z-index 1
		&.slide-out
			cover absolute
			display block
			z-index 2

			
	.slider-bullets
		position absolute
		bottom 0
		z-index 3
		text-align center
		width 100%
		.slider-bullet
			circle 6px
			background $color
			display inline-block
			margin 0 3px
			transition tn
			opacity .25
			&.slider-bullet-current
				opacity 1
			&:hover
				cursor pointer
	
	.slider-navigation
		.slider-nav
			position absolute
			top 50%
			transition tn
			line-height @height
			background transparent
			color $lightgray
			border 0
			z-index 3
			text-align center
			@media $break-md
				width 40px
				font-size 150%
				bottom 50%
				height 100px
				margin-top (@height / -2)
				line-height @height
			&.slider-nav-left 
				display none
				@media $break-lg
					display block
					left 0
					.fa
						font-size 70px
						margin-left -5px
				
			&.slider-nav-right
				display none
				@media $break-lg
					display block
					right 0
					.fa
						font-size 70px
						margin-right -5px
				
			&:hover
				cursor pointer
				opacity 1
				color $color


	&.slider-dir-left
		.slide
			&.slide-current
				animation slideRight .8s cb
			&.slide-out
				animation slideRightOut .8s cb both

	&.slider-dir-right
		.slide
			&.slide-current
				animation slideLeft .8s cb
			&.slide-out
				animation slideLeftOut .8s cb both

	&.slider-fade
		&.slider-dir-left
		&.slider-dir-right
			.slide
				&.slide-current
					animation fadeIn .8s cb
				&.slide-out
					animation fadeOut .8s cb both


	&.slider-cover
		cover absolute
		.slider-slides
		.slide
			cover absolute

