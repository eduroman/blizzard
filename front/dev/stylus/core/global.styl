
// Reset

*
	margin 0
	padding 0
	border 0
	outline 0
	box-sizing border-box


// Base styles

body
	-webkit-font-smoothing antialiased
	background $global-bg
	background-color $light

body, button, input, textarea, select
	font-family $font
	color $global-color
	font-size $global-size
	line-height $global-lh

a, button, input, textarea, select
	transition tn

a
	color $color
	text-decoration none
	&.a-classic
		text-decoration underline

button
select
label
input[type='checkbox']
input[type='radio']
	&:hover
		cursor pointer

h1, h2, h3, h4, h5
	font-weight normal

p, h1, h2, h3, h4, h5
	margin-bottom sep

h1
.h1
	title h1

h2
.h2
	title h2

h3
.h3
	title h3

h4
.h4
	title h4

h5		
.h5
	title h5

ul
ol
	list-style-type none

img
	display block
	width auto
	height auto
	max-width 100%
	margin 0 auto

svg
	display block
	max-width 100%


.table-container
	overflow auto
	table
		width 100%
		
table
	border-collapse collapse
	line-height $global-lh
	text-align left
	td
	th
		border border
		padding 5px 10px
		@media $break-md
			padding 10px 15px


