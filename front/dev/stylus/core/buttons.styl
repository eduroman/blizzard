
.btn
	text-decoration none
	background-color $color
	border-color $color
	color $color_2
	display inline-block
	padding 10px 20px
	border-radius $rad
	vertical-align middle
	line-height $global-lh
	transition .2s ease
	text-align center
	text-transform uppercase
	font-size $global-size-xs
	font-weight 500
	letter-spacing 0.25px

	&.btn--md
		padding 14px 20px

	&.btn--lg
		padding 16px 30px

	&.btn--block
		display block
		width 100%

	&:hover
		background-color $color_2
		color $color

	&.button-yellow
		background $color_2
		color $dark
		&:hover
			background-color $color
			color $color_2

	&.button-light
		background $light
		color $color
		box-shadow $shadow
		&:hover
			background-color $color
			color $white

	&.button-dark
		background $dark
		color $color_2
